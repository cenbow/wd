<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>

	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
	<mapping path="/*" decorator="/WEB-INF/decorators/decorator.jsp" />
	<mapping path="/index" decorator="/WEB-INF/decorators/default.jsp" />
	<mapping path="/userinfo/*" decorator="/WEB-INF/decorators/default.jsp" /> 
	<mapping path="/*.ajax" exclue="true" />
	<mapping path="/order/buydetails" decorator="/WEB-INF/decorators/order_details.jsp" /> 
	<mapping path="/order/reservedispose" decorator="/WEB-INF/decorators/order_details.jsp" /> 
	<mapping path="/order/refund" decorator="/WEB-INF/decorators/order_details.jsp" /> 
	<mapping path="/order/modifyprice" decorator="/WEB-INF/decorators/order_details.jsp" /> 
	<mapping path="/order/delivery" decorator="/WEB-INF/decorators/order_details.jsp" /> 
	<mapping path="*/popup/*" exclue="true" />
	<mapping path="/Product/*" decorator="/WEB-INF/decorators/decorator_publish.jsp" />
	
</sitemesh>